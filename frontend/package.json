{
  "name": "cryoet-data-portal",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "pnpm --parallel build",
    "clean": "rm -rf .cache && pnpm --parallel clean",
    "clean:node-modules": "rm -rf node_modules && rm -rf packages/*/node_modules",
    "dev": "pnpm --parallel dev",
    "dev:data-portal": "pnpm --filter data-portal dev",
    "dev:graphiql": "pnpm --filter graphiql dev",
    "lint": "run-p lint:*",
    "lint:packages": "pnpm --parallel lint",
    "lint:prettier": "prettier --check ."
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prettier": "3.0.3"
  }
}
